{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A ranged dot plot that uses 'layer' to convey changing life expectancy for the five most populous countries (between 1955 and 2000).",
    "data": {"url": "who_data.csv"},
    "params": [
      {
        "name": "Country_selection",
        "bind": {
          "input": "select",
          "options": [null, "Brazil", "China", "India", "Indonesia", "United States"],
          "labels": ["Show All", "Brazil", "China", "India", "Indonesia", "United States"],
          "name": "Country Selection: "
        }
      }
    ],
    "width": 350,
    "height": 200,
    "transform": [
      {
        "filter": {
          "field": "Country",
          "oneOf": ["China", "India", "United States", "Indonesia", "Brazil"]
        }
      },
      {
        "filter": {
          "field": "Year",
          "oneOf": [2000, 2015]
        }
      },
      {"filter": "Country_selection == null || datum.Country == Country_selection"}
    ],
    "encoding": {
      "x": {
        "field": "Life_expectancy",
        "type": "quantitative",
        "title": "Life Expectancy (years)"
      },
      "y": {
        "field": "Country",
        "type": "nominal",
        "title": "Country",
        "axis": {
          "offset": 5,
          "ticks": false,
          "minExtent": 70,
          "domain": false
        }
      },
      "tooltip": [
        {"field": "Country", "type": "nominal", "title": "Country"},
        {"field": "Life_expectancy", "type": "quantitative", "title": "Life Expectancy (years)"}
      ]
    },
    "layer": [
      {
        "mark": {
          "type": "line",
          "strokeWidth": 2,
          "interpolate": "basis"
        },
        "encoding": {
          "detail": {
            "field": "Country",
            "type": "nominal"
          },
          "color": {"value": "#db646f"}
        }
      },
      {
        "mark": {
          "type": "point",
          "filled": true,
          "size": 50
        },
        "encoding": {
          "color": {
            "field": "Year",
            "type": "ordinal",
            "scale": {
              "domain": [2000, 2015],
              "range": ["#e6959c", "#911a24"]
            },
            "title": "Year"
          }
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "dx": -10
        },
        "encoding": {
          "text": {
            "condition": {
              "test": "datum.Year === 2000",
              "field": "Country",
              "type": "nominal"
            },
            "value": ""
          }
        }
      }
    ]
  }
  